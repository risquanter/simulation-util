{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "CDF of expert opinion data Metalog (4-term fit), with original expert estimates highlighted.",
  "layer": [
    {
      "data": {
        "values": "PLACEHOLDER_RULES"
      },
      "mark": {
        "type": "rule",
        "stroke": "midnightblue",
        "strokeDash": [4, 4],
        "strokeWidth": 1
      },
      "encoding": {
        "x": { "field": "x", "type": "quantitative" , "scale": { "domain": [-5, 15], "clamp": true }  }
      }
    },
    {
      "data": { "values": "PLACEHOLDER_FIT_1" },
      "mark": {
        "type": "line",
        "color": "firebrick",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "quantile",
          "type": "quantitative",
          "title": "Work finished (days)"
        },
        "y": {
          "field": "p",
          "type": "quantitative",
          "title": "CDF"
        }
      }
    },
    {
      "data": { "values": "PLACEHOLDER_FIT_2" },
      "mark": {
        "type": "line",
        "color": "steelblue",
        "strokeWidth": 2
      },
      "encoding": {
        "x": { "field": "quantile", "type": "quantitative" },
        "y": { "field": "p",        "type": "quantitative" }
      }
    },
    {
      "data": { "values": "PLACEHOLDER_OBS" },
      "mark": {
        "type": "point",
        "shape": "circle",
        "color": "black",
        "filled": true,
        "size": 100
      },
      "encoding": {
        "x": { "field": "quantile", "type": "quantitative" },
        "y": { "field": "p",        "type": "quantitative" }
      }
    },
    {
      "data": {
        "values": "PLACEHOLDER_LABELS"
      },
      "mark": {"type": "text", "dx": -30, "dy": -5, "fontSize": 12},
      "encoding": {
        "x": {"field": "quantile", "type": "quantitative"},
        "y": {"field": "p", "type": "quantitative"},
        "text": {"field": "label", "type": "nominal"},
        "color": {"field": "color", "type": "nominal", "scale": null}
      }
    }
  ]
}
